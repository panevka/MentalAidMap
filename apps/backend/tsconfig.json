{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "api",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "incremental": true,
    "esModuleInterop": true,
    "moduleDetection": "force"
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
